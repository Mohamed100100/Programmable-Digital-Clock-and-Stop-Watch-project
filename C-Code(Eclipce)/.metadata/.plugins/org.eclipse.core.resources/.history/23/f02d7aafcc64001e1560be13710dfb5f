#ifndef TIMER0_CONFG_H_
#define TIMER0_CONFG_H_

/***********************************************************************/
/**************** You Will Put The Modes Of Timer0  ********************/
/**************** You have 4 Choices ***********************************/
/**************** (1) NORMAL_MODE0    ***********************************/
/*****************(2) PHASCORCT_MODE0 ***********************************/
/**************** (3) COMPARE_MODE0   ***********************************/
/**************** (4) FASTPWM_MODE0   ***********************************/
/***********************************************************************/
#define TIMER0_MODE		COMPARE_MODE0
/***********************************************************************/

/************** You Will Put The Clock Select Of Timer0 (CLK = 1/F_CPU)*/
/**************** You have 8 Choices ***********************************/
/**************** (1) NO_CLK_OFF         *******************************/
/*****************(2) CLK_NO_PRESCALER   *******************************/
/**************** (3) CLK_8_PRESCALER    *******************************/
/**************** (4) CLK_64_PRESCALER   *******************************/
/**************** (5) CLK_256_PRESCALER  *******************************/
/**************** (6) CLK_1024_PRESCALER *******************************/
/**************** (7) EXT_CLK_F_EDGE     *******************************/
/**************** (8) EXT_CLK_R_EDGE     *******************************/
/***********************************************************************/
#define CLOCK_SELECT	CLK_8_PRESCALER
/***********************************************************************/













/***********************************************************************/
/**************** You Will Put The Modes Of Timer1 (Channel A) *********/
/**************** You have 16 Choices ***********************************/
/*
|----| |--------------------------------|------|
|Mode| |  Mode of Operation(channel A)	| TOP  |
|----| |--------------------------------|------|
| 01 | |Normal 						    |0xFFFF|
| 02 | |PWM, Phase Correct, 8-bit 	    |0x00FF|
| 03 | |PWM, Phase Correct, 9-bit 	    |0x01FF|
| 04 | |PWM, Phase Correct, 10-bit 	    |0x03FF|
| 05 | |CTC 						    |OCR1A |
| 06 | |FastPWM, 8-bit 			     	|0x00FF|
| 07 | |FastPWM, 9-bit 			     	|0x01FF|
| 08 | |FastPWM, 10-bit 			    |0x03FF|
| 09 | |PWM,Phase and Frequency Correct |ICR1A |
| 10 | |PWM,Phase and Frequency Correct |OCR1A |
| 11 | |PWM,Phase Correct 				|ICR1A |
| 12 | |PWM,Phase Correct 				|OCR1A |
| 13 | |CTC 							|ICR1A |
| 14 | |Reserved – – –                  | ---  |
| 15 | |Fast PWM 						|ICR1A |
| 16 | |Fast PWM 						|OCR1A |
|----| |--------------------------------|------|
*/
/**************** (1)  MODE_A_01 ***************************************/
/*****************(2)  MODE_A_02 ***************************************/
/**************** (3)  MODE_A_03  **************************************/
/**************** (4)  MODE_A_04   *************************************/
/**************** (5)  MODE_A_05 ***************************************/
/**************** (6)  MODE_A_06 ***************************************/
/**************** (7)  MODE_A_07 ***************************************/
/**************** (8)  MODE_A_08 ***************************************/
/**************** (9)  MODE_A_09   *************************************/
/**************** (10) MODE_A_10   *************************************/
/**************** (11) MODE_A_11   *************************************/
/**************** (12) MODE_A_12   *************************************/
/**************** (13) MODE_A_13   *************************************/
/**************** (14) MODE_A_14   *************************************/
/**************** (15) MODE_A_15   *************************************/
/**************** (16) MODE_A_16   *************************************/

/***********************************************************************/
#define TIMER1A_MODE		MODE_A_01
/***********************************************************************/


/***********************************************************************/
/**************** You Will Put The Modes Of Timer1 (Channel A) *********/
/**************** You have 16 Choices ***********************************/
/*
|----| |--------------------------------|------|
|Mode| |  Mode of Operation(channel A)	| TOP  |
|----| |--------------------------------|------|
| 01 | |Normal 						    |0xFFFF|
| 02 | |PWM, Phase Correct, 8-bit 	    |0x00FF|
| 03 | |PWM, Phase Correct, 9-bit 	    |0x01FF|
| 04 | |PWM, Phase Correct, 10-bit 	    |0x03FF|
| 05 | |CTC 						    |OCR1B |
| 06 | |FastPWM, 8-bit 			     	|0x00FF|
| 07 | |FastPWM, 9-bit 			     	|0x01FF|
| 08 | |FastPWM, 10-bit 			    |0x03FF|
| 09 | |PWM,Phase and Frequency Correct |ICR1B |
| 10 | |PWM,Phase and Frequency Correct |OCR1B |
| 11 | |PWM,Phase Correct 				|ICR1B |
| 12 | |PWM,Phase Correct 				|OCR1B |
| 13 | |CTC 							|ICR1B |
| 14 | |Reserved – – –                  | ---  |
| 15 | |Fast PWM 						|ICR1B |
| 16 | |Fast PWM 						|OCR1B |
|----| |--------------------------------|------|
*/
/**************** (1)  MODE_B_01 ***************************************/
/*****************(2)  MODE_B_02 ***************************************/
/**************** (3)  MODE_B_03  **************************************/
/**************** (4)  MODE_B_04   *************************************/
/**************** (5)  MODE_B_05 ***************************************/
/**************** (6)  MODE_B_06 ***************************************/
/**************** (7)  MODE_B_07 ***************************************/
/**************** (8)  MODE_B_08 ***************************************/
/**************** (9)  MODE_B_09   *************************************/
/**************** (10) MODE_B_10   *************************************/
/**************** (11) MODE_B_11   *************************************/
/**************** (12) MODE_B_12   *************************************/
/**************** (13) MODE_B_13   *************************************/
/**************** (14) MODE_B_14   *************************************/
/**************** (15) MODE_B_15   *************************************/
/**************** (16) MODE_B_16   *************************************/

/***********************************************************************/
#define TIMER1B_MODE		MODE_B_01
/***********************************************************************/




/*************************/
/*This Part For Explain*/
/*************************/
/*Tick Time  = 1/(F_CPU/PreScaller)
 * OverFlow Time = Tick Time * Top (256)*/


/*
|----| |--------------------------------|------|
|Mode| |  Mode of Operation(channel A)	| TOP  |
|----| |--------------------------------|------|
| 00 | |Normal 						    |0xFFFF|
| 01 | |PWM, Phase Correct, 8-bit 	    |0x00FF|
| 02 | |PWM, Phase Correct, 9-bit 	    |0x01FF|
| 03 | |PWM, Phase Correct, 10-bit 	    |0x03FF|
| 04 | |CTC 						    |OCR1A |
| 05 | |FastPWM, 8-bit 			     	|0x00FF|
| 06 | |FastPWM, 9-bit 			     	|0x01FF|
| 07 | |FastPWM, 10-bit 			    |0x03FF|
| 08 | |PWM,Phase and Frequency Correct |ICR1  |
| 09 | |PWM,Phase and Frequency Correct |OCR1A |
| 10 | |PWM,Phase Correct 				|ICR1  |
| 11 | |PWM,Phase Correct 				|OCR1A |
| 12 | |CTC 							|ICR1  |
| 13 | |Reserved – – –                  | ---  |
| 14 | |Fast PWM 						|ICR1  |
| 15 | |Fast PWM 						|OCR1A |
|----| |--------------------------------|------|
*/

#endif /* TIMER0_CONFG_H_ */
